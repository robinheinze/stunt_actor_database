<h2>Edit your profile</h2>

<%= render('layouts/error', :object => @person) %>

<form id="edit-form" role="form" action="/people/<%= @person.slug %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('form') %>
  <div class="col-md-12">
    <button class="btn btn-primary" type="submit" form="edit-form">Save Changes!</button>
    <a href="/people/<%= @person.slug %>" class="btn btn-danger">Cancel</a>
  </div>
</form>



